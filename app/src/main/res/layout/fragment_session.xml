<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".Inicio.SessionFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="INICIAR  SESIÓN"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="26dp" />

        <EditText
            android:id="@+id/txtcorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/custome_edit_text_bg"
            android:drawableLeft="@drawable/ic_username"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:hint="Correo"
            android:inputType="textEmailAddress"
            android:maxLength="9"
            android:text="josue"
            android:textColor="@color/colorAccent" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:passwordToggleEnabled="true">
            <EditText
                android:id="@+id/txtpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_work_black_24dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/custome_edit_text_bg"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtcelular"
                android:autoText="false"
                android:maxLength="10"
                android:shadowColor="@android:color/holo_green_dark"
                android:text="1234"
                android:textColor="@color/colorAccent"
                android:layout_alignRight="@+id/chb_mostrarcontraseña"
                android:hint="Contraseña (recomendado)"
                android:inputType="textPassword"/>

        </android.support.design.widget.TextInputLayout>
        <!--<EditText-->
        <!--android:id="@+id/txtpass1"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignEnd="@+id/chb_mostrarcontraseña"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignRight="@+id/chb_mostrarcontraseña"-->
        <!--android:layout_below="@+id/txtcelular"-->
        <!--android:layout_marginTop="41dp"-->
        <!--android:ems="10"-->
        <!--android:hint="Contraseña"-->
        <!--android:inputType="numberPassword"-->
        <!--android:maxLength="4"-->
        <!--android:text="1234" />-->

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="¿Olvidaste tu Contraseña?"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnIngresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/chb_mostrarcontraseña"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/chb_mostrarcontraseña"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="18dp"
            android:text="Iniciar Sesión"
            android:textColor="#226007"

            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="19dp"
            android:text="¿Usuario Nuevo?"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/chb_mostrarcontraseña"
            android:layout_alignRight="@+id/chb_mostrarcontraseña"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="20dp"
            android:text="Registrarse"

            android:textColor="#226007"

            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>



</android.support.constraint.ConstraintLayout>